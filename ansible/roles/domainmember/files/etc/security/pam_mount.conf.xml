<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE pam_mount SYSTEM "pam_mount.conf.xml.dtd">
<pam_mount>

    <debug enable="0" />
    <mntoptions allow="nosuid,nodev,loop,encryption,fsck,nonempty,allow_root,allow_other" />
    <mntoptions require="nosuid,nodev" />
    <logout wait="0" hup="0" term="0" kill="0" />
    <mkmountpoint enable="1" remove="true" />

    <!-- Thomas Shares -->
    <volume 
             user="thomas"
             fstype="cifs"  
             server="192.168.1.11" 
             path="work" 
             mountpoint="/home/%(USER)/shares/work" 
             options="uid=%(USER),dir_mode=0700,file_mode=0700,nosuid,nodev" />
    <volume 
             user="thomas"
             fstype="cifs"  
             server="192.168.1.11" 
             path="BedAndBreakfast" 
             mountpoint="/home/%(USER)/shares/bed_and_breakfast" 
             options="uid=%(USER),dir_mode=0700,file_mode=0700,nosuid,nodev" />

    <volume 
             user="thomas"
             fstype="cifs"  
             server="192.168.1.11" 
             path="calibre_library" 
             mountpoint="/home/%(USER)/shares/calibre_library" 
             options="uid=%(USER),dir_mode=0700,file_mode=0700,nosuid,nodev" />

    <!-- Lindenhof Shares -->
    <volume 
             sgrp="domain users"
             fstype="cifs"  
             server="192.168.1.11" 
             path="home/%(USER)" 
             mountpoint="/home/%(USER)/shares/%(USER)" 
             options="uid=%(USER),dir_mode=0700,file_mode=0700,nosuid,nodev" />

    <volume 
             sgrp="domain users"
             fstype="cifs"  
             server="192.168.1.11" 
             path="Filme" 
             mountpoint="/home/%(USER)/shares/filme" 
             options="uid=%(USER),dir_mode=0700,file_mode=0700,nosuid,nodev" />

    <volume 
             sgrp="domain users"
             fstype="cifs"  
             server="192.168.1.11" 
             path="Software" 
             mountpoint="/home/%(USER)/shares/software" 
             options="uid=%(USER),dir_mode=0700,file_mode=0700,nosuid,nodev" />
    <volume 
             sgrp="domain users"
             fstype="cifs"  
             server="192.168.1.11" 
             path="Bilder" 
             mountpoint="/home/%(USER)/shares/bilder" 
             options="uid=%(USER),dir_mode=0700,file_mode=0700,nosuid,nodev" />
    <volume 
             sgrp="domain users"
             fstype="cifs"  
             server="192.168.1.11" 
             path="Musik" 
             mountpoint="/home/%(USER)/shares/musik" 
             options="uid=%(USER),dir_mode=0700,file_mode=0700,nosuid,nodev" />
</pam_mount>
