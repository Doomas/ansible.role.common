# Generated by Ansible

auto lo
iface lo inet loopback

{% if interfaces_ipv4 is defined %}
{% for interface in interfaces_ipv4 %}
auto {{ interface.name }}
iface {{ interface.name }} inet {{ interface.mode }}
{% if interface.address is defined %}
    address {{ interface.address }}
{% endif %}
{% if interface.netmask is defined %}
    netmask {{ interface.netmask }}
{% endif %}
{% if interface.network is defined %}
    network {{ interface.network }}
{% endif %}
{% if interface.broadcast is defined %}
    broadcast {{ interface.broadcast }}
{% endif %}
{% if interface.gateway is defined %}
    gateway {{ interface.gateway }}
{% endif %}

{% endfor %}
{% endif %}

{% if interfaces_bridge is defined %}
{% for interface in interfaces_bridge %}
auto {{ interface.name }}
iface {{ interface.name }} inet {{ interface.mode }}
    address {{ interface.address }}
    netmask {{ interface.netmask }}
    network {{ interface.network }}
    broadcast {{ interface.broadcast }}
    gateway {{ interface.gateway }}
    bridge_ports {{ interface.bridge_ports }}
    bridge_stp off
    bridge_fd 0
    bridge_maxwait 0

{% endfor %}
{% endif %}
