acl "trusted" {
        10.111.11/24;
        10.111.111/24;
        10.111.112/24;
        10.112.11/24;
        192.168.1/24;
        localhost;
        localnets;
};

options {
        directory "/var/cache/bind";

        # dnssec-validation auto; # TODO Setup DNSSEC
        auth-nxdomain no;    # conform to RFC1035
        listen-on-v6 { any; };
        allow-query { any; };
        allow-recursion { trusted; };
        allow-query-cache { trusted; };
};
